{
  "name": "news-manager",
  "version": "1.0.0",
  "description": "News Manager",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "test": "jest",
    "setup": "npm install",
    "build": "bun build index.js --compile --outfile=build/news-manager",
    "build:all": "npm run build:linux && npm run build:win && npm run build:mac",
    "build:linux": "NODE_ENV=production bun build index.js --compile --target=bun-linux-x64 --outfile=build/news-manager-linux",
    "build:win": "NODE_ENV=production bun build index.js --compile --target=bun-windows-x64 --outfile=build/news-manager-win.exe",
    "build:mac": "NODE_ENV=production bun build index.js --compile --target=bun-darwin-x64 --outfile=build/news-manager-mac",
    "build:full": "npm run build:all && npm run copy:assets",
    "copy:assets": "cp -r public build/"
  },
  "dependencies": {
    "conf": "^14.0.0",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10"
  }
}
